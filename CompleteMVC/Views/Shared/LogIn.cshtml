@section ContentBody{
    <h2>LogIn</h2>
    @Html.ValidationMessage("CredentialError", new { style = "color:red;" })
    @using (Html.BeginForm("LogIn", "UserRegistration", FormMethod.Post))
    {
        <div style="width:100%; height:100%">
            <div id="Login">
                <table>
                    <tr>
                        <td>Email Id:</td>
                        <td>
                            @Html.TextBoxFor(m => m.UserEmail)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.UserEmail)
                        </td>
                    </tr>
                    <tr>
                        <td>Password</td>
                        <td>
                            @Html.PasswordFor(m => m.UserPassword)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.UserPassword)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">@Html.ActionLink("Forgot Password", "ForgotPassword", "User")</td>
                    </tr>
                    <tr>
                        <td align="left" colspan="2">
                            <input type="submit" id="LogIn" name="LogIn" value="Log In" />
                        </td>
                    </tr>
                </table>
            </div>

        </div>
    }
}


