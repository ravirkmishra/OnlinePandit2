                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.MatchIsEggetarian, new SelectList(Model.listMatchHabbitsType, "Key", "Value", 0), "Select...", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group widthForm">
